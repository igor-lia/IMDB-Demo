<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= movie.Text %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= movie.rating %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= movie.category %>
  </p>

  <%= image_tag(movie.image, style:"width:400px; height:400px") %>

</div>
